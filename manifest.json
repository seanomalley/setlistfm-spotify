{
  "manifest_version": 2,
  "name": "Setlistify",
  "version": "1.0",
  "description": "Makes Spotify playlists from setlist.fm pages",
  "page_action": {
    "default_icon": "images/favicon.png"
  },
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://www.setlist.fm/*"],
      "js": ["scripts/jquery-1.6.2.js", "scripts/common.js", "scripts/search.js", "scripts/content.js"]
    }
  ],
  "permissions": [
    "http://ws.spotify.com/",
    "http://www.setlist.fm/",
    "declarativeContent",
    "tabs"
  ],
  "icons" : {
    "48" : "images/favicon.png",
    "128" : "images/favicon.png"
  }
}