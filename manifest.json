{
  "manifest_version": 2,
  "name": "Setlistify",
  "version": "1.0",
  "description": "Makes Spotify playlists from setlist.fm pages",
  "page_action": {
    "default_icon": "favicon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "http://ws.spotify.com/",
    "http://www.setlist.fm/",
    "declarativeContent"
  ],
  "icons" : {
    "48" : "favicon.png",
    "128" : "favicon.png"
  },
  "content_scripts": [
  	{
	  	"matches": ["http://www.setlist.fm/*"],
	  	"js": ["jquery-1.6.2.js", "content.js"]
  	}
  ]
}