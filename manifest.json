{
  "manifest_version": 2,
  "name": "Setlistify",
  "version": "3.0",
  "description": "Makes Spotify playlists from setlist.fm pages",
  "page_action": {
    "default_icon": "images/favicon.png"
  },
  "background": {
    "scripts": ["scripts/background.js"]
//    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://www.setlist.fm/*", "http://www.setlistify.com/*"],
      "js": ["scripts/jquery-2.1.4.min.js",
             "scripts/common.js",
             "scripts/search.js",
             "scripts/auth.js",
             "scripts/create.js",
             "scripts/content.js"]
    }
  ],
  "permissions": [
    "http://*.spotify.com/",
    "https://*.spotify.com/",
    "http://www.setlist.fm/",
    "http://www.google.com/",
    "http://www.setlistify.com/*",
    "declarativeContent",
    "webRequest",
    "webRequestBlocking",
    "tabs"
  ],
  "icons" : {
    "48" : "images/favicon.png",
    "128" : "images/favicon.png"
  }
}